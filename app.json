{
  "expo": {
    "name": "03cam",
    "slug": "03cam",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "com.o3cam.app",
    "userInterfaceStyle": "dark",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.o3cam.app",
      "infoPlist": {
        "NSCameraUsageDescription": "03cam needs camera access to capture retro photos",
        "NSPhotoLibraryUsageDescription": "03cam needs storage access to save your photos",
        "NSPhotoLibraryAddUsageDescription": "03cam needs permission to save photos to your library"
      }
    },
    "android": {
      "package": "com.o3cam.app",
      "adaptiveIcon": {
        "backgroundColor": "#0D1F17",
        "foregroundImage": "./assets/images/icon.png"
      },
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false,
      "permissions": [
        "CAMERA",
        "WRITE_EXTERNAL_STORAGE",
        "READ_EXTERNAL_STORAGE",
        "READ_MEDIA_IMAGES"
      ]
    },
    "web": {
      "output": "single",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash-icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#0D1F17",
          "dark": {
            "backgroundColor": "#0D1F17"
          }
        }
      ],
      [
        "expo-camera",
        {
          "cameraPermission": "03cam needs camera access to capture retro photos"
        }
      ],
      [
        "expo-media-library",
        {
          "photosPermission": "03cam needs storage access to save your photos",
          "savePhotosPermission": "03cam needs permission to save photos to your library"
        }
      ],
      "expo-web-browser"
    ],
    "experiments": {
      "reactCompiler": true
    }
  }
}
